{
  "routes": [
    {
      "method": "GET",
      "path": "/cookbooks",
      "handler": "cookbook.find",
      "config": {
        "policies": ["global::isAuthenticated", "global::isTargetUserLoggedIn"]
      }
    },
    {
      "method": "GET",
      "path": "/cookbooks/:id",
      "handler": "cookbook.findOne",
      "config": {
        "policies": ["global::isAuthenticated", "isCurrentUserAllowedToAccessCookbook"]
      }
    },
    {
      "method": "POST",
      "path": "/cookbooks",
      "handler": "cookbook.create",
      "config": {
        "policies": ["global::isAuthenticated", "validateCookbook"]
      }
    },
    {
      "method": "PUT",
      "path": "/cookbooks/:id",
      "handler": "cookbook.update",
      "config": {
        "policies": ["global::isAuthenticated", "isCurrentUserOwnerOfCookbook", "validateCookbook"]
      }
    },
    {
      "method": "DELETE",
      "path": "/cookbooks/:id",
      "handler": "cookbook.delete",
      "config": {
        "policies": ["global::isAuthenticated", "isCurrentUserOwnerOfCookbook", "isNotLastCookbookOfOwner"]
      }
    }
  ]
}
